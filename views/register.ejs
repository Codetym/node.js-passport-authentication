<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Register</h1>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" placeholder="Enter Name" value="<%- typeof name != 'undefined' ? name : '' %>" class="form-control" >
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter Email" class="form-control" value="<%- typeof email != 'undefined' ? email : '' %>" >
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Create Password" class="form-control" value="<%- typeof password != 'undefined' ? password : '' %>" >
                </div>

                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" placeholder="Confirm Password" class="form-control" value="<%- typeof password != 'undefined' ? password2 : '' %>">
                </div>

                <button class="btn btn-primary btn-block">Register</button>
            </form>

            <p class="lead mt-4">Have An Account? <a href="login">Login</a></p>
        </div>
    </div>
</div>