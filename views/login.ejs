<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            <form action="/users/login" method="POST">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter Email" class="form-control" value="<%- typeof email != 'undefined' ? email : '' %>" >
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Create Password" class="form-control" value="<%- typeof password != 'undefined' ? password : '' %>" >
                </div>

                <button class="btn btn-primary btn-block">Login</button>
            </form>

            <p class="lead mt-4">Don't Have An Account Yet? <a href="register">Register</a></p>
        </div>
    </div>
</div>